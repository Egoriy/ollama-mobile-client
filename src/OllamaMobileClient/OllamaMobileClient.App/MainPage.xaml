<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OllamaMobileClient.App.MainPage"
             Title="Ollama Client">

    <Grid RowDefinitions="*,Auto" Padding="12" RowSpacing="10">
        <CollectionView x:Name="MessagesView" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="0,4" StrokeShape="12">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Role}" FontSize="12" Opacity="0.7"/>
                            <Label Text="{Binding Text}" FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
            <Entry x:Name="Input" Placeholder="Сообщение..." />
            <Button Grid.Column="1" Text="Send" Clicked="OnSendClicked"/>
            <Button Grid.Column="2" Text="Stop" Clicked="OnStopClicked"/>
        </Grid>
    </Grid>
</ContentPage>